<h1>Listing matches</h1>
<table class='matches'>
	<% @matches.each do |match| %>
	  <tr>
		
	  <%=match.player1.last_name %> </td>
	  <%=match.player2.last_name %> </td>
	  	 <td> <%= match.player1_score %>:<td> <%= match.player2_score %>
	  	 <td> <%= link_to "Edit", edit_match_path(match) %> <br>
			  <%= link_to "Destroy", match, method: :delete, data: { confirm: 'Are you sure?' } %>
		 </td>  	 	
	  </tr>
	<% end %>
</table>

<br>
<%= link_to "New match", new_match_path %>
