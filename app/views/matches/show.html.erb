<div class="row">
	<aside class="col-md-4">
		<ul class="match_info">
			<li><h1>Match #<%= @match.id %></h1></li>
			<li><%= @match.player1.last_name %> vs <%= @match.player2.last_name %> |
			<%= @match.player1_score %>:<%= @match.player2_score %></li>
			<li><%= @match.date %></li>
		</ul>
	</aside>
	<div class="col-md-6">
		<% if @match.comments.any? %>
			<h3>Comments (<%= @match.comments.count %>)</h3>
			<ol class="comments">
				<%= render @comments %>
			</ol>
			<%= will_paginate @comments %>			
		<% end %>
		<%= render 'comments/comment_form' %>		
	</div>	
</div>
