<h1>Editing match</h1>
<% if @match.errors != nil %>
		<% @match.errors.full_messages.each do |message| %>
			<%= message %>
		<% end %>
	<% end %>

<%= form_for @match, url: {action: "update"} do |f| %>
	<h3> Date </h3><br>
	<%= f.date_field :date %><br>
	
	<h3> First Player <h3>
	<%= f.collection_select :player1_id, Player.all, :id, :last_name, :include_blank => true %>
	<h3> Second Player <h3>
	<%= f.collection_select :player2_id, Player.all, :id, :last_name, :include_blank => true %>

	<h3> Score of first player <h3>
	<%= f.text_field :player1_score %>
	<h3> Score of second player <h3>
	<%= f.text_field :player2_score %> <br>
	 
	<%= f.submit %><br>
<% end %>

<%= link_to "Back", matches_path %>