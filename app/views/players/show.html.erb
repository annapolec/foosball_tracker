<div class="row">
  <div class="col-sm-6"><%= image_tag @player.avatar.url(:medium), class: 'img-round' %> </div>
  <div class="col-sm-6">
  	<h4> Number of matches: <%= @player.number_of_matches %></h4>
  	<h4> Wins: <%= @player.wins %> </h4> 
  	<h4> Losts: <%= @player.losts %> </h4><br>
  	<h4> Points in general clasification: <%= @player.points %> </h4>
  	<h4> Goals: <%= @player.total_score %> </h4>
  	<h4> Average number of goals: <%= @player.average_number_of_goals %> </h4>  	
  </div>  
</div>

<div class="row">
  <div class="col-sm-4">
    <h3> <%= @player.first_name %> <%= @player.last_name %> </h3>
  </div>
</div>

<%= link_to players_path, class: 'btn btn-default' do %>
  <span class="glyphicon glyphicon-arrow-left"></span>
  Back
<% end %>

<%= link_to edit_player_path(@player), class: 'btn btn-default' do %>
  <span class="glyphicon glyphicon-pencil"></span>
  Edit
<% end %>



