<h1>Ranking</h1>
	<ul class='index'>
		<% @rankings.each do |player| %>  
	    <li>
      <%= gravatar_for(player) %>
      <%= player.position_in_classification %>.
      <%= link_to "#{player.first_name} #{player.last_name}", player %><br>
      <%= player.points %> points
    	</li>		    
	  <% end %>
  <%= will_paginate %>
  </ul>






	