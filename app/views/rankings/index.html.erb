<h1>Ranking</h1>
<table class="table table-striped">
	<tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Points</th>
    <th></th>
   </tr>
<% classification.each do |player| %>
	<tr>
		<td><%= image_tag player.avatar.url(:thumb), class: 'img-circle' %></td>
		<td><h4><%= player.first_name %> <%= player.last_name %></h4></td> 
		<td><h4><%= player.points %></h4></td>
		<td> 
  	 		<%= link_to player, class: 'btn btn-default' do %> 
  	 			<span class="glyphicon glyphicon-search"></span>
    			Show
  			<% end %>
  	 	</td>
	</tr>
<% end %>	





	